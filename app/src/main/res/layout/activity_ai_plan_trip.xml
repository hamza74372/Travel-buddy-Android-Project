<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/activity_ai_plan_trip.xml -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:padding="16dp"
    tools:context=".AiPlanTripActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plan Your AI-Powered Trip"
            android:textSize="24sp"
            android:textColor="#2E3A59"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="24dp" />

        <!-- Travel Types Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardElevation="6dp"
            app:cardCornerRadius="12dp"
            android:padding="16dp"
            android:background="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:text="Select Travel Type(s)"
                    android:textSize="18sp"
                    android:textColor="#1A237E"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    />

                <CheckBox
                    android:id="@+id/cb_adventure"
                    android:text="Adventure"
                    android:textSize="16sp"
                    android:textColor="#424242"
                    android:paddingBottom="4dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>

                <CheckBox
                    android:id="@+id/cb_beaches"
                    android:text="Beaches"
                    android:textSize="16sp"
                    android:textColor="#424242"
                    android:paddingBottom="4dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>

                <CheckBox
                    android:id="@+id/cb_trekking"
                    android:text="Trekking"
                    android:textSize="16sp"
                    android:textColor="#424242"
                    android:paddingBottom="4dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>

                <CheckBox
                    android:id="@+id/cb_calm"
                    android:text="Calm and Relaxing"
                    android:textSize="16sp"
                    android:textColor="#424242"
                    android:paddingBottom="4dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>

                <CheckBox
                    android:id="@+id/cb_cultural"
                    android:text="Cultural"
                    android:textSize="16sp"
                    android:textColor="#424242"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Travel Companions Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardElevation="6dp"
            app:cardCornerRadius="12dp"
            android:padding="16dp"
            android:background="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:text="Travel With"
                    android:textSize="18sp"
                    android:textColor="#1A237E"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>

                <RadioGroup
                    android:id="@+id/rg_travel_companions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_solo"
                        android:text="Solo"
                        android:textSize="16sp"
                        android:textColor="#424242"
                        android:layout_marginEnd="24dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>

                    <RadioButton
                        android:id="@+id/rb_friends"
                        android:text="Friends"
                        android:textSize="16sp"
                        android:textColor="#424242"
                        android:layout_marginEnd="24dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>

                    <RadioButton
                        android:id="@+id/rb_family"
                        android:text="Family"
                        android:textSize="16sp"
                        android:textColor="#424242"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>
                </RadioGroup>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Budget Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardElevation="6dp"
            app:cardCornerRadius="12dp"
            android:padding="16dp"
            android:background="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:text="Budget"
                    android:textSize="18sp"
                    android:textColor="#1A237E"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>

                <RadioGroup
                    android:id="@+id/rg_budget"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_budget_friendly"
                        android:text="Budget Friendly"
                        android:textSize="16sp"
                        android:textColor="#424242"
                        android:layout_marginEnd="24dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>

                    <RadioButton
                        android:id="@+id/rb_medium"
                        android:text="Medium"
                        android:textSize="16sp"
                        android:textColor="#424242"
                        android:layout_marginEnd="24dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>

                    <RadioButton
                        android:id="@+id/rb_high"
                        android:text="High"
                        android:textSize="16sp"
                        android:textColor="#424242"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>
                </RadioGroup>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Optional: Trip Duration -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardElevation="6dp"
            app:cardCornerRadius="12dp"
            android:padding="16dp"
            android:background="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:text="Trip Duration"
                    android:textSize="18sp"
                    android:textColor="#1A237E"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>

                <Spinner
                    android:id="@+id/spinner_duration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Submit Button -->
        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Get AI Suggestions"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:backgroundTint="#3949AB"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="8dp"
            android:elevation="4dp" />

    </LinearLayout>

</ScrollView>
